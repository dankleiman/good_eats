<h2>Add New Restaurant</h2>

<%= form_for @restaurant do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

   <%= f.label :address %><br>
  <%= f.text_field :address %><br>

   <%= f.label :city %><br>
  <%= f.text_field :city %><br>

   <%= f.label :state %><br>
  <%= f.text_field :state %><br>

   <%= f.label :zip %><br>
  <%= f.text_field :zip %><br>

  <%= f.label :description %><br>
  <%= f.text_area :description, cols: 40, rows: 5 %><br>

  <%= f.label :category %><br>
  <%= f.text_field :category %><br>

  <%= f.submit 'Submit' %>
<% end %>
<br>
<%= link_to 'Back to Restaurants', restaurants_path %>



