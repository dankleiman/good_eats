<h2>Review <%=@restaurant.name%></h2>

<%= form_for [@review] do |f| %>

  <%= f.label :review %><br>
  <%= f.text_area :body, cols: 40, rows: 5 %><br>

  <%= f.label :rating, "Rating (1-5)" %><br>
  <%= f.text_field :rating%><br>

  <%=f.hidden_field :restaurant_id, :value => @restaurant.id%>
  <%= f.submit 'Submit' %>
<% end %>
<br>
<%= link_to 'Back', restaurant_path(@restaurant) %>
